<!-- app/views/users/edit_password.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title mb-0">パスワードの変更</h4>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, url: mypage_password_path, method: :patch, local: true, class: "needs-validation", novalidate: true) do |f| %>
            <!-- エラーメッセージ表示 -->
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group mb-3">
              <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
              <%= f.password_field :current_password, class: "form-control", required: true %>
              <div class="invalid-feedback">
                現在のパスワードを入力してください。
              </div>
            </div>
            <div class="form-group mb-3">
              <%= f.label :password, "新しいパスワード", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", required: true, minlength: 6 %>
              <div class="form-text">6文字以上で入力してください。</div>
              <div class="invalid-feedback">
                新しいパスワードを6文字以上で入力してください。
              </div>
            </div>
            <div class="form-group mb-3">
              <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", required: true %>
              <div class="invalid-feedback">
                パスワード確認を入力してください。
              </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "キャンセル", mypage_path, class: "btn btn-secondary me-md-2" %>
              <%= f.submit "パスワードを変更", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>