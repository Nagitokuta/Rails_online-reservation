<!-- app/views/users/edit.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title mb-0">ユーザー情報編集</h4>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, url: mypage_path, method: :patch, local: true, class: "needs-validation", novalidate: true) do |f| %>
            <!-- エラーメッセージ表示 -->
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group mb-3">
              <%= f.label :username, "ユーザー名", class: "form-label" %>
              <%= f.text_field :username, class: "form-control", required: true %>
              <div class="invalid-feedback">
                ユーザー名を入力してください。
              </div>
            </div>
            <div class="form-group mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true %>
              <div class="invalid-feedback">
                有効なメールアドレスを入力してください。
              </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to "キャンセル", mypage_path, class: "btn btn-secondary me-md-2" %>
              <%= f.submit "保存", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>